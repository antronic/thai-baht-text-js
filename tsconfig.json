{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "tests"],
  "compilerOptions": {
    "target": "ES5",
    "lib": ["DOM"],
    "module": "UMD",
    "rootDir": "./src",
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
